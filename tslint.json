{
  "extends": ["tslint:latest", "tslint-config-prettier"],
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "no-submodule-imports": false,
    "no-shadowed-variable": false,
    "no-console": false,
    "no-implicit-dependencies": [true, ["~"]]
  },
  "linterOptions": {
    "exclude": ["src/bests/**/*"]
  }
}
